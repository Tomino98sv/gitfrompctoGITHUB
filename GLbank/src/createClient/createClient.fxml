<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="createClient.CreateClient">
   <children>
      <HBox layoutX="70.0" layoutY="50.0" prefHeight="200.0" prefWidth="500.0">
         <children>
            <VBox prefHeight="200.0" prefWidth="180.0">
               <children>
                  <Label text="FirstName:">
                     <font>
                        <Font name="Bell MT" size="35.0" />
                     </font>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                     </VBox.margin>
                  </Label>
                  <Label layoutX="10.0" layoutY="10.0" text="LastName:">
                     <font>
                        <Font name="Bell MT" size="35.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                     </VBox.margin>
                  </Label>
                  <Label layoutX="10.0" layoutY="53.0" text="Email:">
                     <font>
                        <Font name="Bell MT" size="35.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                     </VBox.margin>
                  </Label>
               </children>
            </VBox>
            <VBox layoutX="10.0" layoutY="10.0" prefHeight="200.0" prefWidth="320.0">
               <children>
                  <TextField fx:id="fNameInput" alignment="CENTER" promptText="type here firstname">
                     <font>
                        <Font size="17.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="15.0" top="15.0" />
                     </VBox.margin>
                  </TextField>
                  <TextField fx:id="lNameInput" alignment="CENTER" layoutX="10.0" layoutY="20.0" promptText="type here name">
                     <font>
                        <Font size="17.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                     </VBox.margin>
                  </TextField>
                  <TextField fx:id="emailInput" alignment="CENTER" layoutX="10.0" layoutY="78.0" promptText="type here email">
                     <font>
                        <Font size="17.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                     </VBox.margin>
                  </TextField>
               </children>
            </VBox>
         </children></HBox>
      <Button layoutX="250.0" layoutY="250.0" mnemonicParsing="false" onAction="#createNewClient" text="Create New Client">
         <font>
            <Font size="22.0" />
         </font>
      </Button>
      <Button layoutX="250.0" layoutY="305.0" mnemonicParsing="false" onAction="#cancel" text="Cancel">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Label fx:id="warningFname" alignment="CENTER" layoutX="350.0" layoutY="105.0" text="Minimum 3 chars" textFill="RED" visible="false">
         <font>
            <Font size="13.0" />
         </font>
      </Label>
      <Label fx:id="warningLname" alignment="CENTER" layoutX="350.0" layoutY="165.0" text="Minimum 3 chars" textFill="RED" visible="false">
         <font>
            <Font size="13.0" />
         </font>
      </Label>
      <Label fx:id="warningEmail" alignment="CENTER" layoutX="350.0" layoutY="225.0" text="not valid email form" textFill="RED" visible="false">
         <font>
            <Font size="13.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
