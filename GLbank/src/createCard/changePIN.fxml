<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="220.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="createCard.ChangePIN">
   <children>
      <Label layoutX="104.0" layoutY="10.0" text="ChangePIN">
         <font>
            <Font size="19.0" />
         </font>
      </Label>
      <TextField fx:id="inputOldPin" alignment="CENTER" layoutX="69.0" layoutY="38.0" promptText="old PIN">
         <font>
            <Font size="13.0" />
         </font>
      </TextField>
      <TextField fx:id="inputNewPin" alignment="CENTER" layoutX="69.0" layoutY="96.0" promptText="new PIN">
         <font>
            <Font size="13.0" />
         </font>
      </TextField>
      <TextField fx:id="inputRepeatedNewPin" alignment="CENTER" layoutX="69.0" layoutY="145.0" promptText="Repeat new PIN">
         <font>
            <Font size="13.0" />
         </font>
      </TextField>
      <Button layoutX="138.0" layoutY="180.0" mnemonicParsing="false" onAction="#changePin" text="Confirm">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
      <Label fx:id="labelWrongOld" layoutX="111.0" layoutY="69.0" text="Wrong old PIN" textFill="RED" visible="false" />
      <Label fx:id="labelWrongRepeated" layoutX="79.0" layoutY="125.0" text="Wrongly repeated new PIN" textFill="RED" visible="false" />
      <Button layoutX="79.0" layoutY="180.0" mnemonicParsing="false" onAction="#backToAccount" text="Back">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
